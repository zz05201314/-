/* pages/my/my.wxss */
page{
  background: #f5f6f7;
}
.top{
  width: 100%;
  height: 340rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  background: #fff;
  margin-bottom: 20rpx;
}
.top image{
 height: 180rpx;
  width: 180rpx;
  border-radius: 50%;
  margin-bottom: 40rpx;
}
.navs{
  border-top: 2rpx solid #ccc;
  width: 100%;
  background: #fff;
}
.navs .nav {
  width: 100%;
  padding: 0rpx 20rpx;
  box-sizing:border-box;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #ccc;
  display: flex;
  justify-content: space-between;
}
.logout{
  margin-top: 30rpx;
  background: #fff;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border: solid 1rpx #ccc;
  border-left: 0;
}