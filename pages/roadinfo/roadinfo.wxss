/* 头部 */
.top{
  height: 70rpx;
  line-height: 70rpx;
  font-size: 26rpx;
  background: #f0eff5;
  /* padding-left: 20rpx; */
  text-align: center;
  color: #333;
}
/* radio选择框 */
.page-body{
  background: #fff;
  padding-bottom: 8rpx;
}
.weui-cell{
display: flex;
}
.weui-cell__bd{
  line-height: 52rpx;
}
.weui-check__label{
  padding-top:16rpx;
}
/* 地址选择 */
.address{
  border-top: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
  background: #fff;
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
  align-items: center;
  padding-left:18rpx;
}
.address button{
margin-left:30rpx;
color: #666;
font-size: 26rpx;
cursor: pointer;
}
.content{
  margin-top: 10rpx;
  background: #fff;
}
.content input{
  width:95%;
  height: 160rpx;
  border: 1rpx groove #333;
}
.roadinfo{
  margin-top: 10rpx;
  background: #fff;
}
.roadinfo text{
  padding: 10rpx 0 10rpx 20rpx;
}
.roadinfo input{
  width:95%;
  height: 160rpx;
  border: 1rpx groove #333;
}
